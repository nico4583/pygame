import pygame
import random

posImag = [0, 0]

pygame.init()

WIDTH, HEIGHT = 800, 600

screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Esquiva al enemigo")

imagen_pj = pygame.image.load("descarga.png")
imagen_pj = pygame.transform.scale(imagen_pj,(60,60))


WHITE = (255, 255, 255)
RED = (255, 0, 0)
BLUE = (0, 0, 255)  



player_size = 50
player_x = (WIDTH - player_size) // 2
player_y = HEIGHT - 2 * player_size         
player_speed = 10

enemy_size = 50
enemy_x = random.randint(0, WIDTH - enemy_size)
enemy_y = 0
enemy_speed = 15

enemy_size2 = 50
enemy_x2 = random.randint(0, WIDTH - enemy_size)
enemy_y2 = 0
enemy_speed2 = 15


bullet_speed = 20

clock =  pygame.time.Clock()

score = 0

running = True
bullets = [] 

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_SPACE:
            
                bullet = pygame.Rect(player_x + player_size // 2, player_y, 5, 10)
                bullets.append(bullet)

    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player_x > 0:
        player_x -= player_speed
    if keys[pygame.K_RIGHT] and player_x < WIDTH - player_size:
        player_x += player_speed

    enemy_y += enemy_speed
    enemy_y2 += enemy_speed2

    if player_x < enemy_x + enemy_size and player_x + player_size > enemy_x:
        if player_y < enemy_y + enemy_size and player_y + player_size > enemy_y:
            print("¡Colisión!")
            running = False

    if player_x < enemy_x2 + enemy_size2 and player_x + player_size > enemy_x2:
        if player_y < enemy_y2 + enemy_size2 and player_y + player_size > enemy_y2:
            print("¡Colisión!")
            running = False

    screen.fill(WHITE)

    
    for bullet in bullets:
        pygame.draw.rect(screen, BLUE, bullet)  
        bullet.y -= bullet_speed  

        if bullet.y < 0: 
            bullets.remove(bullet)

        if bullet.colliderect((enemy_x, enemy_y, enemy_size, enemy_size)):
            bullets.remove(bullet)
            enemy_x = random.randint(0, WIDTH - enemy_size)
            enemy_y = 0
            score += 1

        if bullet.colliderect((enemy_x2, enemy_y2, enemy_size2, enemy_size2)):
            bullets.remove(bullet)
            enemy_x2 = random.randint(0, WIDTH - enemy_size2)
            enemy_y2 = 0
            score += 1

    pygame.draw.rect(screen, RED, (player_x, player_y, player_size, player_size))
    pygame.draw.rect(screen, RED, (enemy_x, enemy_y, enemy_size, enemy_size))
    pygame.draw.rect(screen, RED, (enemy_x2, enemy_y2, enemy_size2, enemy_size2))             

    screen.blit(imagen_pj,(player_x, player_y, player_size, player_size))
    imagen_pj.set_colorkey(WHITE)

    pygame.display.update()

    clock.tick(30)

    if enemy_y > HEIGHT:
        enemy_x = random.randint(0, WIDTH - enemy_size)
        enemy_y = 0
        score += 1

    if enemy_y2 > HEIGHT:
        enemy_x2 = random.randint(0, WIDTH - enemy_size2)
        enemy_y2 = 0
        score += 1

print("Puntuación final:", score)
pygame.quit() 

