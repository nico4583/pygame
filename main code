import pygame
from constantes import *
import random

posicion_imagen = (0,0)
pygame.init()

def dibujar_texto(surface, texto, fuente, x, y):
    fuente = pygame.font.SysFont("Arial", 30)
    texto_surface = fuente.render(texto, True, COLOR_BLANCO)
    texto_rect = texto_surface.get_rect()
    texto_rect.midtop = (x, y)
    surface.blit(texto_surface, texto_rect)

def dibujar_vida(surface, x, y, porcentaje):
    barra_vida_largo = 100
    barra_vida_alto = 10
    cantidad_vida = (porcentaje / 100) * barra_vida_largo
    borde = pygame.Rect(x, y, barra_vida_largo, barra_vida_alto)
    cantidad_vida = pygame.Rect(x, y, cantidad_vida, barra_vida_alto)
    pygame.draw.rect(surface, COLOR_VERDE, cantidad_vida)
    pygame.draw.rect(surface, COLOR_BLANCO, borde, 2)

def agregar_ememigos():
    all_sprites.add(enemigo)
    enemigos_lista.add(enemigo)

class Nave(pygame.sprite.Sprite):
    def __init__(self) -> None:
        super().__init__()
        self.image = pygame.image.load("Imagenes/1.png")
        self.image = pygame.transform.scale(self.image, (50,50))
        self.rect = self.image.get_rect()
        self.rect.centerx = ANCHO_VENTANA // 2
        self.rect.bottom = ALTO_VENTANA - 10
        self.speed_x = 0
        self.vida = 100

    def update(self):
        self.speed_x = 0
        mouse = pygame.key.get_pressed()
        if mouse[pygame.K_LEFT]:
            self.speed_x = -10
            self.rect.x += self.speed_x
        if mouse[pygame.K_RIGHT]:
            self.speed_x = 10
            self.rect.x += self.speed_x
        if self.rect.right > ANCHO_VENTANA:
            self.rect.right = ANCHO_VENTANA
        if self.rect.left < 0:
            self.rect.left = 0

    def disparar(self):
        laser = Laser(self.rect.centerx, self.rect.top)
        all_sprites.add(laser)
        laser_lista.add(laser)

class Enemigos(pygame.sprite.Sprite):
    def __init__(self) -> None:
        super().__init__()
        self.image = random.choice(enemigos_images) 
        self.image = pygame.transform.scale(self.image, (50,50))
        self.rect = self.image.get_rect()
        self.rect.x = random.randrange(ANCHO_VENTANA - self.rect.width)
        self.rect.y = random.randrange(-220,-40)
        self.speed_y = random.randrange(1,10)
        self.speed_x = random.randrange(-5,5)    

    def update(self):
        self.rect.y += self.speed_y
        self.rect.x += self.speed_x
        if self.rect.top > ALTO_VENTANA + 10 or self.rect.left < -30 or self.rect.right > ANCHO_VENTANA + 30:
            self.rect.x = random.randrange(ANCHO_VENTANA - self.rect.width)
            self.rect.y = random.randrange(-140,-40)
            self.speed_y = random.randrange(1,10)

class Laser(pygame.sprite.Sprite):
    def __init__(self, x, y) -> None:
        super().__init__()
        self.image = pygame.image.load("Imagenes/laser.png")
        self.rect = self.image.get_rect()
        self.rect.y = y
        self.rect.centerx = x
        self.speed_y = -10
    
    def update(self):
        self.rect.y += self.speed_y
        if self.rect.bottom < 0:
            self.kill()

pantalla = pygame.display.set_mode((ANCHO_VENTANA,ALTO_VENTANA)) 
pygame.display.set_caption("GALAGA") 

fondo = pygame.image.load("Imagenes/91655.jpg") 
fondo = pygame.transform.scale(fondo,(ANCHO_VENTANA,ALTO_VENTANA))

clock = pygame.time.Clock()
score = 0


enemigos_images = []
enemigos_lista = ["Imagenes/Enemigo.png"]
for img in enemigos_lista:
    enemigos_images.append(pygame.image.load(img))


all_sprites = pygame.sprite.Group()
enemigos_lista = pygame.sprite.Group()
laser_lista = pygame.sprite.Group()


nave = Nave()
all_sprites.add(nave)


for i in range(10):
    enemigo = Enemigos()
    agregar_ememigos()


flag_correr = True
while flag_correr:
    clock.tick(60)
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            flag_correr = False

        elif evento.type == pygame.KEYDOWN:
            if evento.key == pygame.K_SPACE:
                nave.disparar()

    all_sprites.update()

    hits = pygame.sprite.groupcollide(enemigos_lista, laser_lista, True, True)
    for hit in hits:
        enemigo = Enemigos()
        agregar_ememigos()
        score += 10


    hits = pygame.sprite.spritecollide(nave, enemigos_lista, True)
    for hit in hits:
        nave.vida -= 25 # Le voy restando de a 25 la vida de la nave.
        agregar_ememigos()

        if nave.vida <= 0:
            flag_correr = False
            print("Â¡MORISTE!")
            
    pantalla.blit(fondo, (posicion_imagen))

    all_sprites.draw(pantalla)


    dibujar_texto(pantalla, str(score), 25, ANCHO_VENTANA // 2, 10)


    dibujar_vida(pantalla, 5, 5, nave.vida)

    pygame.display.flip() #Va actualizando la pagina

pygame.quit()   


